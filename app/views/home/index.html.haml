#generator
  = render 'links/form'

- content_for :scripts do
  :javascript
    $(function() {
      // initialize backbone

      var links = new Shortlinks.Collections.LinksCollection();
      links.reset(#{@links.to_json})

      Shortlinks.Tables.links = links;

      window.router = new Shortlinks.Routers.LinksRouter();
      Backbone.history.start();
    });

